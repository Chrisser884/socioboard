<script type="text/javascript">

    function bindmanageCoupon() {
        $('#ManageCouponsTable').html('<center><img src="../Themes/Socioboard/Contents/img/admin/loading.gif" /></center>');
        $.ajax({
            type: 'POST',
            url: '../Coupons/LoadCoupons',
            success: function (msg) {
                //alert(msg);
                $('#ManageCouponsTable').html(msg);
                $('#ManageCouponsTable').dataTable();
            },
        });
    }
    function EditCoupontDetails(id) {

        window.top.location.href = "../Coupons/EditCoupons?Id=" + id;

    }

    $(document).ready(function () {
        bindmanageCoupon();
    });
</script>