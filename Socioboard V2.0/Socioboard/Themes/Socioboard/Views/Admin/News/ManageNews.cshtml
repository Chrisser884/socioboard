<script type="text/javascript">

    function bindmanagenews() {
        $('#ManageNewsDataTable').html('<center><img src="../Themes/Socioboard/Contents/img/admin/loading.gif" /></center>');
        $.ajax({
            type: 'POST',
            url: '../News/LoadNews',
            success: function (msg) {
                $('#ManageNewsDataTable').html(msg);
                $('#ManageNewsDataTable').dataTable();
            },
        });
    }
    function EditNewsDetails(id) {

        window.top.location.href = "../News/EditNews?Id=" + id;

    }

    $(document).ready(function () {
        bindmanagenews();
    });
</script>
